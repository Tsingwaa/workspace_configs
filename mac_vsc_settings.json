{
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorStyle": "block",
  "editor.definitionLinkOpensInPeek": true,
  "editor.fontFamily": "'FiraCode Nerd Font'",
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "files.associations": {
    "*.tex": "latex"
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/*.pyc": true,
    "**/.idea": true,
    "**/.vscode": true,
    "**/.workspace": true,
    "**/__pycache__": true,
    "**/pycache": true,
    "**/venv": true
  },
  "git.confirmSync": false,
  "gitProjectManager.baseProjectsFolders": [
    "/Users/waa/Projects/"
  ],
  "gitProjectManager.openInNewWindow": true,
  "latex-workshop.bibtex-format.sort.enabled": true,
  "latex-workshop.bibtex-format.align-equal.enabled": true,
  "latex-workshop.bibtex-format.sortby": [
    "booktitle",
    "journal",
    "title",
    "year",
  ],
  "latex-workshop.bibtex-fields.sort.enabled": true,
  "latex-workshop.bibtex-fields.order": [
    "title",
    "author",
    "key",
    "booktitle",
    "journal",
    "year",
    "volume",
    "number",
    "pages",
    "publisher",
    "address",
    "editor",
    "edition",
    "translator",
  ],
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk"
  ],
  "latex-workshop.latex.recipe.default": "xelatex -> bibtex -> xelatex*2",
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "xelatex -> bibtex -> xelatex*2",
      "tools": [
        "xelatex",
        "bibtex",
        "xelatex",
        "xelatex"
      ]
    },
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOCFILE%"
      ],
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ],
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOCFILE%"
      ],
    }
  ],
  "latex-workshop.message.badbox.show": false,
  "latex-workshop.synctex.afterBuild.enabled": true, // 启用反向搜索
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.view.pdf.viewer": "tab",
  "notebook.consolidatedRunButton": true,
  "notebook.lineNumbers": "on",
  "notebook.markup.fontSize": 14,
  "settingsSync.ignoredExtensions": [
    "wholroyd.jinja"
  ],
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.ignoreProcessNames": [
    "zsh"
  ],
  "terminal.integrated.inheritEnv": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block-outline",
  "vim.cursorStylePerMode.replace": "block",
  "vim.cursorStylePerMode.visual": "block",
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "vim.cursorStylePerMode.visualline": "block-outline",
  "vim.easymotion": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "after": [
        "<Esc>"
      ],
      "before": [
        "j",
        "j"
      ]
    }
  ],
  "vim.leader": ",",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": [
        "d",
        "d"
      ],
      "before": [
        "<leader>",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    }
  ],
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.visualstar": true,
  "workbench.colorTheme": "Default Dark+",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.iconTheme": "material-icon-theme",
  "spellright.addToSystemDictionary": true,
  "problems.showCurrentInStatus": true,
  "diffEditor.codeLens": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "’": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  "editor.unicodeHighlight.allowedLocales": {
    "ja": true,
    "zh-hans": true,
    "zh-hant": true
  },
  "explorer.confirmDelete": false,
  "workbench.editor.historyBasedLanguageDetection": true,
}